{
  "manifest_version": 2,

  "name": "Minify Links",
  "description": "This extension creates short links using goo.gl for any pages",
  "version": "0.0.2",

  "permissions": [
    "https://www.googleapis.com/urlshortener/v1/url",
    "contextMenus",
    "clipboardWrite"
  ],
  "background": {
    "scripts": ["lib/minify.js", "lib/jquery.js"]
  },
  "icons": {
    "16": "images/icon2.png",
    "48": "images/icon1.png",
    "128" : "images/icon1.png"
  }
}